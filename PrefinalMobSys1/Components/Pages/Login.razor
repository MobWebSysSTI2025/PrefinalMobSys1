@page "/login"
<style>
    .card {
        background-color: #fff; 
        border: 1px solid #ff8c00; 
        border-radius: 8px; 
        padding: 20px; 
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); 
        max-width: 400px; 
        margin: auto; 

    .alert {
        background-color: #ffcc00; 
        color: #fff; 
        padding: 10px; 
        border-radius: 4px; 
        margin-bottom: 15px; 
    }

    table {
        width: 100%; 
        margin-bottom: 15px; 
    }

    td {
        padding: 10px; 
    }

    input[type="text"],
    input[type="password"] {
        width: 100%;
        padding: 8px; 
        border: 1px solid #ff8c00; 
        border-radius: 4px; 
    }

    button {
        background-color: #ff8c00; 
        color: #fff; 
        border: none; 
        padding: 10px 15px; 
        border-radius: 4px; 
        cursor: pointer; 
        font-size: 16px; 
    }

        button:hover {
            background-color: #e07b00; 
        }
</style>

<div class="card">
    @if (!string.IsNullOrWhiteSpace(StatusMessage))
    {
        <div class="alert alert-@Status">
            <i class="fa fa-info-circle"></i>&nbsp;
            @StatusMessage
        </div>
    }
    <table>
        <tr>
            <td><label>Username:</label></td>
            <td><input type="text" @bind="Model.Username" /></td>
        </tr>
        <tr>
            <td><label>Password:</label></td>
            <td><input type="password" @bind="Model.Password" /></td>
        </tr>
    </table>
    <button @onclick="LoginUser">
        <i class="fas fa-sign-in-alt"></i>&nbsp;Log In
    </button>
</div>
