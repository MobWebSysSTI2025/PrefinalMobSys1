@page "/register"

@if (!string.IsNullOrWhiteSpace(StatusMessage))
{
    <div class="alert alert-@Status">
        <i class="fa fa-info-circle"></i>&nbsp;
        @StatusMessage
    </div>
}
<div class="container">
    <h3 id="register">REGISTER</h3>
    <table>
        <tr>
            <td><input type="text" @bind="Model.Username" placeholder="Username" /></td>
        </tr>
        <tr>
            <td><input type="password" @bind="Model.Password" placeholder="Password" /></td>
        </tr>
        <tr>
            <td><input type="text" @bind="Model.FirstName" placeholder="First Name" /></td>
        </tr>
        <tr>
            <td><input type="text" @bind="Model.LastName" placeholder="Last Name" /></td>
        </tr>
        <tr>
            <td><input type="text" @bind="Model.MobileNumber" placeholder="Mobile" /></td>
        </tr>
        <tr>
            <td><textarea @bind="Model.Address" placeholder="Address"></textarea></td>
        </tr>
    </table>

    <button class="btnSave" @onclick="RegisterUser">
        Save
    </button>

</div>


<style>
    * {
        box-sizing: border-box;
    }

    .container {
        width: 75%;
        background: white;
        overflow: hidden;
        border-radius: 10px;
        box-shadow: 5px 20px 50px lightgray;
    }

    #register {
        text-align: center;
        font-weight: bold;
        margin: 10px;
    }

    input {
        border: solid 1px black;
        width: auto;
        height: 20px;
        background: white;
        justify-content: center;
        display: flex;
        margin: 20px auto;
        padding: 12px;
        border: none;
        outline: none;
        border-radius: 5px;
    }

        input:hover {
            border: solid 3px #ff6c01;
        }

        input:focus {
            border: solid 3px #ff6c01;
        }

    textarea {
        width: 100%;
        height: px;
        background: #e0dede;
        justify-content: center;
        display: flex;
        margin: 20px auto;
        padding: 12px;
        border: none;
        outline: none;
        border-radius: 5px;
    }

        textarea:hover {
            border: solid 3px #ff6c01;
        }

        textarea:focus {
            border: solid 3px #ff6c01;
        }

    .btnSave {
        color: white;
        background-color: #ff6c01;
        text-align: center;
        margin: 20px auto;
        padding: 16px 20px;
        font-size: 16px;
        cursor: pointer;
        width: 100%;
        border-radius: 16px;
        opacity: 0.8;
    }

        .btnSave:hover {
            border: solid 1px white;
            opacity: 1;
        }
</style>