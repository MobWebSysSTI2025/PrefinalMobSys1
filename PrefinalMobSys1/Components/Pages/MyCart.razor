@page "/mycart"
<style>
	* {
		box-sizing:border-box;
	}

	.container{
		display:flex;
		justify-content:center;
		align-items:center;
		flex-direction:column;
	}

	.header {
		width:100%;
	}


	.fa-trash{
		font-size:20px;
		float:right;
		color:orange;
	}
	
	.fa-arrow-left {
		font-size:20px;
		color:orange;
	}

	.header h1 {
		text-align:center;
	}

	.image {
		display:flex;
		justify-content:center;
	}

	img {
		width:150px;

	}
	
	.items{
		margin-bottom:20px;
	}
	
	.item1 {
		width:90vw;
		padding:10px;
