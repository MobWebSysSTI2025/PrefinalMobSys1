@page "/myorders"
<div class="container py-4" style="max-width: 480px;">
    <h4 class="fw-bold text-center mb-4">My Orders</h4>

    <div class="card shadow-sm mb-3 rounded-4 border-0" style="background-color: #fff;">
        <div class="card-body d-flex align-items-center p-3">
            <img src="./imgs/mushroom.jpg" class="rounded-3 me-3" style="width: 60px; height: 60px; object-fit: cover;" />
            <div class="flex-grow-1">
                <h6 class="mb-1 fw-semibold">Mushrooms</h6>
                <small class="text-muted">Hot beef steak with fry</small>
                <div class="mt-2 d-flex align-items-center justify-content-between">
                    <span class="badge bg-light text-dark px-3 py-1">
                        <i class="fa fa-box me-1"></i> Qty: 2
                    </span>
                    <span class="fw-bold" style="color: #ff6600;">$24.00</span>
                </div>
            </div>
            <button class="btn btn-light border-0 text-danger ms-2">
                <i class="fa fa-trash"></i>
            </button>
        </div>
    </div>

    <div class="card shadow-sm mb-3 rounded-4 border-0" style="background-color: #fff;">
        <div class="card-body d-flex align-items-center p-3">
            <img src="./imgs/burger.jpg" class="rounded-3 me-3" style="width: 60px; height: 60px; object-fit: cover;" />
            <div class="flex-grow-1">
                <h6 class="mb-1 fw-semibold">Hamburger</h6>
                <small class="text-muted">Hot beef steak with fry</small>
                <div class="mt-2 d-flex align-items-center justify-content-between">
                    <span class="badge bg-light text-dark px-3 py-1">
                        <i class="fa fa-box me-1"></i> Qty: 1
                    </span>
                    <span class="fw-bold" style="color: #ff6600;">$18.00</span>
                </div>
            </div>
            <button class="btn btn-light border-0 text-danger ms-2">
                <i class="fa fa-trash"></i>
            </button>
        </div>
    </div>

    <div class="card shadow-sm mb-3 rounded-4 border-0" style="background-color: #fff;">
        <div class="card-body d-flex align-items-center p-3">
            <img src="./imgs/hawaiianpizza.jpg" class="rounded-3 me-3" style="width: 60px; height: 60px; object-fit: cover;" />
            <div class="flex-grow-1">
                <h6 class="mb-1 fw-semibold">Hawaiian Pizza</h6>
                <small class="text-muted">Hot beef steak with fry</small>
                <div class="mt-2 d-flex align-items-center justify-content-between">
                    <span class="badge bg-light text-dark px-3 py-1">
                        <i class="fa fa-box me-1"></i> Qty: 3
                    </span>
                    <span class="fw-bold" style="color: #ff6600;">$36.00</span>
                </div>
            </div>
            <button class="btn btn-light border-0 text-danger ms-2">
                <i class="fa fa-trash"></i>
            </button>
        </div>
    </div>

    <div class="bg-white rounded-4 shadow-sm p-3 mb-3">
        <div class="d-flex justify-content-between">
            <span class="text-muted">Items Total</span>
            <span class="fw-semibold">$78.00</span>
        </div>
        <div class="d-flex justify-content-between">
            <span class="text-muted">Delivery Fee</span>
            <span class="fw-semibold">$10.00</span>
        </div>
        <hr />
        <div class="d-flex justify-content-between">
            <span class="fw-bold">Subtotal</span>
            <span class="fw-bold" style="color: #ff6600;">$88.00</span>
        </div>
    </div>

    <button class="btn w-100 rounded-3 py-2 fw-semibold text-white" style="background-color: #ff6600;">
        <i class="fa fa-credit-card me-2"></i>Check out
    </button>
</div>